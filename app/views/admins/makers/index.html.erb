<div class="container mt-5">
  <div class="row">
    <div class="col-4 offset-2">
      <table class="table">
        <thead>
          <tr>
            <h3>メーカー 一覧</h3>
          </tr>
        </thead>
        <% @makers.each do |maker| %>
        <tbody>
          <tr>
            <th><%= maker.name %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="co-4 offset-2">
      <%= form_with model: [:admins,@newmaker], local:true do |f| %>

      <div class="form-group">
        <label class="genre">メーカー名</label>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit "保存する" %>
      </div>
      <% end %>
    </div>
  </div>
</div>