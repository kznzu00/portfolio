<div class="container-fluid">
  <div class="row">
    <div class="col-8 offset-2">
      <h1>ユーザー一覧</h1>
      <table class="table border">
        <thead>
          <tr>
            <th>ID</th>
            <th>アイコン</th>
            <th>氏名</th>
            <th>フリガナ</th>
            <th>ニックネーム</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <th><%= user.id %></th>
            <th>
              <%= link_to admins_user_path(user.id) do %>
                <%= attachment_image_tag user, :icon, :fill, 80, 80, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
              <% end %>
            </th>
            <th>
              <%= link_to user.full_name,admins_user_path(user.id) %>
            </th>
            <th><%= user.full_name_kana %></th>
            <th><%= user.nickname %></th>
            <th><%= user.is_active %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="container-fluid">
<div class="row">
    <div class="col-2 offset-5">
      <%= paginate @users %>
    </div>
  </div>
</div>