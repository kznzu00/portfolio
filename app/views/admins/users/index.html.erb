<h1>ユーザー一覧</h1>
<% @users.each do |user| %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>アイコン</th>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>ニックネーム</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= user.id %></th>
      <th>
        <%= link_to admins_user_path(user.id) do %>
          <%= attachment_image_tag user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
        <% end %>
      </th>
      <th>
        <%= link_to user.full_name,admins_user_path(user.id) %>
      </th>
      <th><%= user.full_name_kana %></th>
      <th><%= user.nickname %></th>
    </tr>
  </tbody>
</table>
<% end %>