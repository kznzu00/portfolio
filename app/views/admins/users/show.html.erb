<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-5 offset-4">
      <div class="card" style="width: 40rem;">
        <div class="card-body">
          <%= attachment_image_tag @user, :icon, :fill,100, 100, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
          <h2><%= @user.nickname %></h2>
          <div class="container">
            <div class="row">
              <div class="col-3">
                <h5>氏名</h5>
              </div>
            <div class="col">
              <h5><%= @user.full_name %></h5>
            </div>

            <div class="row">
              <div class="col">
                <h5>フリガナ</h5>
              </div>
              <div class="col">
                <h5><%= @user.full_name_kana %></h5>
              </div>
            </div>

            <div class="row">
              <div class="col-3">
                <h5>メールアドレス</h5>
              </div>
              <div class="col">
                <h5><%= @user.email %></h5>
              </div>
            </div>

            <div class="row">
              <div class="col-3">
                <h5>自己紹介</h5>
              </div>
              <div class="col">
                <%= @user.introduction %>
              </div>
            </div>

            <div class="row">
              <div class="col-3">
                <h5>ステータス</h5>
              </div>
              <div class="col">
                <%= @user.is_active %>
              </div>
            </div>
          </div>
          <%= link_to '変更する', edit_admins_user_path(@user.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-5 offset-4">
      <h4>＜過去の投稿＞</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-5 offset-4">
      <% @posts.each do | post | %>
        <div class="card mb-5" style="width: 40rem;">
          <div class="card-header">
            <div class="container">
              <div class="row">
                <div class="col">
                  <%= attachment_image_tag post.user, :icon, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "mt-3 rounded-circle" %>
                  <%= post.user.nickname %>
                </div>
              </div>
            </div>
          </div>

          <div class="card-body">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, class: "card-img-top", size:'300x450' %>
            <% end %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><h2 class="text-success"><%= link_to post.name, post_path(post.id) %></h2></li>
            <li class="list-group-item"><%= simple_format post.introduction %></li>
          </ul>
          <div class="card-footer">
            <h6 class="text-success">♥<%= post.favorites.count %>のいいね</h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-2 offset-5">
      <%= paginate @posts %>
    </div>
  </div>
</div>



