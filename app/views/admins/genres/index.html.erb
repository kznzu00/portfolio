<div class="container pt-5">
  <div class="row">
    <div class="col-4 offset-2">
      <div class="mx-auto">
        <table class="table">
          <thead>
            <tr>
              <h3>ジャンル 一覧</h3>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to "削除" ,admins_genre_path(genre.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></th>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
    <div class="col-4 offset-1">
      <%= form_with model: [:admins,@newgenre], local:true do |f| %>

      <div class="form-group">
        <label class="genre">ジャンル名</label>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit "保存する", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
