<div class="container mt-5">
  <div class="row">
    <div class="col-8 offset-2">
      <% @posts.each do | post | %>
        <div class="card mb-5" style="width: 40rem;">
          <div class="card-header">
            <div class="container">
              <div class="row">
                <div class="col-2">
                  <%= attachment_image_tag post.user, :icon, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "mt-3 rounded-circle" %>
                </div>
                <div class="col">
                  <h3><%= post.user.nickname %></h3>
                </div>
              </div>
            </div>
          </div>

          <div class="card-body">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, class: "card-img-top", size:'300x450' %>
            <% end %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h2 class="text-success"><%= link_to post.name, post_path(post.id) %></h2></li>
              <li class="list-group-item"><%= simple_format post.introduction %></li>
            </ul>
          </div>
          <div class="card-footer">
            <div class="container">
              <div class="row">
                <div class="col">
                  <h6 class="text-success">♥<%= post.favorites.count %>件のいいね</h6>
                </div>
                <div class="col">
                  <h6 class="text-dark"><%= post.comments.count %>件のコメント</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-5">
      <%= paginate @posts %>
    </div>
  </div>
</div>