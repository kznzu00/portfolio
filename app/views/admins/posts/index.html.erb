<div class="container mt-5">
  <div class="row">
    <div class="col-8 offset-2">
      <% @posts.each do | post | %>
        <div class="card mb-5" style="width: 40rem;">
          <div class="card-body">
            <%= link_to admins_post_path(post.id) do %>
            <%= attachment_image_tag post, :image, class: "card-img-top" %>
            <% end %>
          </div>
          <p class="card-title"><%= link_to post.name, post_path(post.id) %></p>
          <p class="card-title"><%= post.introduction %></p>
          <div class="card-text">
          <%= attachment_image_tag post.user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>