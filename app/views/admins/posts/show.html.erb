<h1>投稿詳細</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @post, :image, size:'500x400' %>
    </div>

    <div class="col">
      <%= attachment_image_tag @post.user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
      <h3><%= @post.name %></h3>
    </div>


    <div class="col">
      <p><%= @post.introduction %></p>
    </div>

  <div class="row">
    <%= link_to admins_post_favorite_path(@post.id) do %>
      ♥<%= @post.favorites.count %> いいね
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <% @post.comments.each do | comment | %>
      <%= comment.comment %>
      <% end %>
    </div>

  </div>

</div>