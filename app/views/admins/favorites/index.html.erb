<h1>いいねしたユーザー</h1>
<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-5 offset-4 posts">
      <% @favorites.each do | favorite | %>
      <div class="card mb-5" style="width: 40rem;">
        <div class="card-header">
          <div class="container">
            <div class="row">
              <div class="col">
                <%= link_to admins_user_path(favorite.user.id) do %>
                  <%= attachment_image_tag favorite.user, :icon, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "mt-3 rounded-circle" %>
                  <%= favorite.user.nickname %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="container">
            <div class="row">
              <div class="col-3">
                <h6>氏名</h6>
              </div>
              <div class="col">
                <%= favorite.user.full_name %>
              </div>
            </div>

            <div class="row">
              <div class="col-3">
                <h6>ステータス</h6>
              </div>
              <div class="col">
                <%= favorite.user.is_active %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <h6> <%= simple_format favorite.user.introduction %> </h6>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>