<h1>いいねしたユーザー</h1>
<% @post.favorites.each do |favorite| %>
<div class="card text-black bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">
    <%= attachment_image_tag favorite.user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
    <%= favorite.user.nickname %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= favorite.user.introduction %></p>
  </div>
</div>

<% end %>