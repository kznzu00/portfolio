<div class="container-fluid pt-5">
  <div class="row">
    <div class="col-3 offset-3">
      <h2>ログイン</h2>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid mt-3">
    <div class="field row">
      <div class="col-2 offset-4">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:size=>"30"%>
      </div>
    </div>
  </div>

  <div class="container-fluid mt-3">
    <div class="field row">
      <div class="col-2 offset-4">
        <%= f.label :パスワード %>
      </div>
      <div class="col-2">
        <%= f.password_field :password, autocomplete: "current-password",:size=>"30" %>
      </div>
    </div>
  </div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class="container-fluid mt-5">
    <div class="actions row">
      <div class="col-2 offset-6">
        <%= f.submit "Log in",class: "btn btn-outline-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-3 offset-3">
      <p>登録がまだの方は<%= link_to "こちら",new_user_registration_path %></p>
      <%#= render "users/shared/links" %>
    </div>
  </div>
</div>