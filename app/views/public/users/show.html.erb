<div class="container">
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= @user.nickname %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <%= @user.full_name %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= @user.full_name_kana %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <%= @user.introduction %>
    </div>
  </div>
</div>

<div class="container">
  <% @user.posts.each do |post| %>
  <div class="card mb-5" style="width: 40rem;">
    <div class="card-body">
      <%= attachment_image_tag post, :image, class: "card-img-top", size:'300x450' %>
    </div>
    <p class="card-title"><%= post.name %></p>
    <p class="card-title"><%= post.introduction %></p>
    <div class="card-text">
      <%= attachment_image_tag post.user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
    </div>
  </div>
  <% end %>

</div>