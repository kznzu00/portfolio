<h1>投稿詳細</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @post, :image, size:'500x400' %>
    </div>

    <div class="col">
      <%= link_to user_path(@post.user.id) do %>
        <%= attachment_image_tag @post.user, :icon_id, :fill, 40, 40, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
        <h3><%= @post.user.nickname %></h3>
      <% end %>
    </div>

    <div class="col">
      <h3><%= @post.name %></h3>
    </div>


    <div class="col">
      <p><%= @post.introduction %></p>
    </div>

  <div class="row">
    <% if user_signed_in? %>
      <% if @post.favorited_by?(current_user) %>
        <p>
          <%= link_to post_favorite_path(@post), method: :delete do %>
            ♥<%= @post.favorites.count %> いいね
          <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to post_favorites_path(@post), method: :post do %>
            ♡<%= @post.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>
    <% else %>
      ♥<%= @post.favorites.count %> いいね
    <% end %>
  </div>

  </div>
</div>
  <% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= form_with model:[@post, @comment], local:true do |f| %>
        <%= f.text_area :comment %>
        <%= f.submit '送信' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <% @post.comments.each do | comment | %>
        <%= comment.comment %>
        <% end %>
      </div>
    </div>
  </div>
  <% else %>
  <div class="container">
    <div class="row">
      <div class="col">
        <% @post.comments.each do | comment | %>
        <%= comment.comment %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>

</div>