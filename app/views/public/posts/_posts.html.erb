<% posts.each do | post | %>
  <div class="card mb-5" style="width: 40rem;">
    <div class="card-body">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, class: "card-img-top" %>
      <% end %>
    </div>
    <p class="card-title"><%= post.name %></p>
    <p class="card-title"><%= post.introduction %></p>
    <div class="card-text">
      <%= attachment_image_tag post.user, :icon_id, :fill, 60, 60, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %>
    </div>
  </div>

<% end %>