<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-8 text-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        新規投稿
      </button>
    </div>
  </div>
</div>

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-5 offset-4 posts">
      <%= render 'posts', posts: @posts %>
    </div>
    <div class="col-3">
      <h4>いいねTOP５の投稿</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-5">
      <%= paginate @posts %>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: @newpost, remote:true do |f| %>
      <div class="modal-body container">
        <div class="row">
          <div class="col offset-2">
            <div class="form-group">
              <%= f.label :name, "アイテム名" %></br>
              <%= f.text_field :name, :size=>"60",class: "from-control" %>
            </div>

            <div class="form-group">
              <%= f.label :image, "アイテム画像" %></br>
              <%= f.attachment_field :image, class: "from-control" %>
            </div>

            <div class="form-group">
              <%= f.label :genre_id, "ジャンル名" %></br>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択", class: "from-control" %>
            </div>

            <div class="form-group">
              <%= f.label :maker_id, "メーカー名" %></br>
              <%= f.collection_select :maker_id, Maker.all, :id, :name, include_blank: "メーカーを選択", class: "from-control" %>
            </div>

            <div class="form-group">
              <%= f.label :introduction, "説明" %></br>
              <%= f.text_area :introduction, size: "60x10",class: "from-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit "投稿", class: "btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>