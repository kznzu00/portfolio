<!DOCTYPE html>
<html>
  <head>
    <title>BasketBallIsLife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid m-3">
          <h3><strong><%= link_to "BasketBall Is Life", root_path, class: "navbar-brand text-white"%></strong></h3>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li><%= link_to "ログアウト", destroy_user_session_path, :method => :delete  %></li>
                <li></li>
                <li></li>
                <li></li>
              </ul>
            <% elsif admin_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-link text-light"><%= link_to "めーかー", admins_makers_path %></li>
                <li class="nav-link text-light"><%= link_to "じゃんる", admins_genres_path %></li>
                <li class="nav-link text-light"><%= link_to "home", posts_path %></li>
                <li class="nav-link text-light"><%= link_to "about", homes_about_path%></li>
                <li class="nav-link text-light"><%= link_to "Sign Up", new_user_registration_path %></li>
                <li class="nav-link text-light"><%= link_to "Sign in", new_user_session_path %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>

    </header>

    <main>
    <%= yield %>
    </main>
    <footer>

    </footer>
  </body>
</html>
