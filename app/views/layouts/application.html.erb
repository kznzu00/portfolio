<!DOCTYPE html>
<html>
  <head>
    <title>BasketBallIsLife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid m-3">
          <% if admin_signed_in? %>
            <h1><strong><%= link_to "BasketBall Is Life", admins_posts_path, class: "navbar-brand text-white"%></strong></h1>
          <% else %>
            <h2><strong><%= link_to "BasketBall Is Life", root_path, class: "navbar-brand text-white"%></strong></h2>
          <% end %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
              <h4 class="text-white">ようこそ<%= current_user.nickname %>さん！</h4>
              <ul class="navbar-nav ml-auto">
                <li><h4><%= link_to "マイページ", user_my_page_path, class: "text-white" %></h4></li>
                <li><h4><%= link_to "ログアウト", destroy_user_session_path, :method => :delete, class: "text-white"  %></h4></li>
                <li></li>
              </ul>
            <% elsif admin_signed_in? %>
              <h3 class="text-white">管理者でログイン中</h3>
              <ul class="navbar-nav ml-auto">
                <li><h4 class="nav-link"><%= link_to "投稿一覧", admins_posts_path, class: "text-white" %></h4></li>
                <li><h4 class="nav-link"><%= link_to "ジャンル", admins_genres_path, class: "text-white" %></h4></li>
                <li><h4 class="nav-link"><%= link_to "メーカー", admins_makers_path, class: "text-white"  %></h4></li>
                <li><h4 class="nav-link"><%= link_to "ユーザー一覧",admins_users_path, class: "text-white"  %></h4></li>
                <li><h4 class="nav-link"><%= link_to "ログアウト",destroy_admin_session_path, class: "text-white" , :method => :delete %></h4></li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-link"><h4><%= link_to "ホーム", posts_path, class: "text-white" %></h4></li>
                <li class="nav-link"><h4><%= link_to "アバウト", homes_about_path, class: "text-white"%></h4></li>
                <li class="nav-link"><h4><%= link_to "サインアップ", new_user_registration_path, class: "text-white" %></h4></li>
                <li class="nav-link"><h4><%= link_to "ログイン", new_user_session_path, class: "text-white" %></h4></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>

    </header>

    <main>
    <%= yield %>
    </main>
    <footer >
      <div class="container mt-5">
        <div class="row">
          <div class="col mx-auto text-center">
            <p>CopyRight portfplio.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
